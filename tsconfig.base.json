{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "es6",
      "ES2017",
      "dom.iterable",
      "esnext",
      "ESNext.AsyncIterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["node_modules"]
}
